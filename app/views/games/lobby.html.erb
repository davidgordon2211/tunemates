<div class="container" style="height: 100vh;">
  <div class="top-header">
    <%= link_to "tunemates.", dashboard_path, class: 'h3' %>
    <h2><%= @game.user.first_name %>'s Game</h2>
  </div>
  <hr>
  <br>
  <div class="lobby-box">
    <div>
      <h2 class="text-center nicknames"><%= simple_form_for @game, :url => game_invited_users_path(@game), remote: true, :method => :post do |f| %>

        <%= select_tag :user, options_for_select(@users.collect{ |u| [u.first_name, u.id] }), class: "select2", style: "width: 278px;", multiple: true %>

          <%= f.button :submit, id: 'simple-form-submit', class: "button-yellow", style: "margin-top: 10px; margin-bottom: 10px;", value: "Invite your tunemates!" %></h2>
       <% end %>
    </div>
    <div class="ctas">
      <div class="text-center">
        <%= link_to "View categories", category_game_path(@game), class: 'button-red' %>
      </div>


      <% if !@game.category1_id.nil? || !@game.category2_id.nil? %>
        <div>
          <h2 class="text-center"><%= link_to "Select songs", song_selection1_game_path(@game), class: 'button-blue' %></h2>
        </div>
      <% end %>

      <% if @game.rounds.count >= 2 %>
        <div>
          <h2 class="text-center"><%= link_to "Start playing", game_path(@game), class: 'button-red' %></h2>
        </div>
      <% end %>
    </div>
  </div>
</div>
