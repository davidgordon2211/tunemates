<div class="container">
  <div class="text-center mt-2">
    <h4>Pick a song for...</h4>
    <h3><%= @category.name %></h3>

    <%= form_tag song_selection1_game_path(@game), :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search], style: "border: 2px solid gray;"  %>
        <%= submit_tag "Search", :name => nil, class: 'btn btn-danger' %>
      </p>
    <% end %>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Image</th>
          <th scope="col">Title</th>
          <th scope="col">Artist</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @results.each do |song| %>
          <% if song.preview_url != nil %>
          <tr>
            <th> <%= image_tag song.album.images.third["url"] %> </th>
            <th scope="row"><%= song.name %></th>
            <td><%= song.artists.first.name %></td>
            <td><%= link_to "Add", game_songs_path(game_id: params[:id], title: song.name, spotify_link: song.preview_url, artist: song.artists.first.name, photo: song.album.images.third["url"], category_id: @game.category1_id),  method: :post, class: 'btn btn-danger' %></td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
